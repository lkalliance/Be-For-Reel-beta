<div class="container pt-3 pb-3">
  <div class="row pb-2 ">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
      <h2>{{poll.title}}</h2>
      {{#if userInfo.voted}}
        <p class="lead text-light">You've already voted on this poll</p>
      {{else}}
        <p class="lead text-light smallDescription">{{poll.description}}</p>
      {{/if}}
    </div>
  </div>
  <div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
      <ul class="list-group" id="option-list">
        {{#each poll.opts}}
        <li class="list-group-item option" data-option="{{id}}">
          <h4 class="mb-1 text-center">{{movie.title}}</h4>
          <div class="d-flex justify-content-between align-items-center">
            <div class="actors text-center">
              <p>{{movie.stars}}</p>
            </div>
            <a href="https://www.imdb.com/title/{{movie.imdb_id}}" class="text-primary flex justify-content-end btn btn-link" target="_blank">IMDb Page</a>
          </div>
          <div>
            <button
              class="btn btn-link text-end ml-auto"
              data-toggle="collapse"
              data-target="#option{{id}}Collapse"
              aria-expanded="true"
              aria-controls="option{{id}}Collapse"
            >More details</button>
          </div>
          <div class="collapse" id="option{{id}}Collapse">
            <p>{{movie.plot}}</p>
            <div class="d-flex flex-row mb-3">
              <div class="mr-3">
                <a class="custom-link text-left" href="{{movie.trailer}}" target="_blank">Trailer</a>
              </div>
              <div>
                <a class="custom-link" href="{{movie.wikipedia}}" target="_blank">Wikipedia</a>
              </div>
            </div>
          </div>
        </li>
        {{/each}}
      </ul>
    </div>
  </div>
{{#if userInfo.loggedIn}}

  <div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
      <h6 class="mt-3 mb-2 text-light">Previous Comments:</h6>
      <ul class="list-group" id="comment-list">
        {{#each comments as |comment|}}
        <li class="list-group-item" id="comment-background">
          <a href='/users/{{comment.user_id}}' style="background-color: black;">{{comment.user}}</a>
            <div>{{comment.movie}}</div>
            <div>{{comment.comment}}</div>
        </li>
        {{/each}}
      </ul>
    </div>
  </div>
  {{else}}
  <div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
      <p class="mt-3 mb-2 text-light numberComments">
      <p class="mt-3 mb-2 text-light numberComments">{{comments.length}} comments have been made on this poll. <a href="/login" class="btn-link custom-link">Login or sign up to vote and comment</a></p>
    </div>
  </div>
{{/if}}

<script src="/js/vote_polls.js"></script>
