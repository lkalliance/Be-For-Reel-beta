<div class="main-container container">
  <h2>Polls</h2>
  <div class="row pb-5">
    <div class="col-sm-10 col-md-9 mx-auto mb-3">
      {{#each polls}}
        <div class="card pos-relative py-3 px-3 mb-3">
          <div class="row align-items-center">
            <div class="col-sm-7 mb-1 mb-sm-0">
              <h5 class="mb-1">
                <a href="/polls/vote/{{id}}">{{title}}</a>
              </h5>
              <p class="text-sm my-1">
                by <a class="text-light btn-link by-user" href="/users/{{user.id}}">{{user.username}}</a> ({{format_date created_at}})
              </p>
            </div>
            <div class="col-sm-5 op-7">
              <div class="row text-center op-7" id="data">
                <div class="col-6 px-1" id="votes"> 
                  <i class="ion-connection-bars icon-1x" id="vote-icon"></i> 
                  <span class="d-block text-sm text-light text">{{totalVotes}} Votes</span> 
                </div>
                <div class="col-6 px-1" id="comments"> 
                  <i class="ion-ios-chatboxes-outline icon-1x" id="comment-icon"></i> 
                  <span class="d-block text-sm text-light text">{{totalComments}} Comments</span> 
                </div>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>