<!-- views/layouts/main.handlebars -->

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Title goes here</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    />
    <link href="/css/styles.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Raleway&display=swap"
      rel="stylesheet"
    />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  </head>
  <body>
    <header
      class="display-flex justify-space-between align-center mx-auto custom-header"
    >

      <!-- Conditionally render login or logout links -->
      <nav class="navbar navbar-expand-lg navbar-light bg-light custom-navbar">
        <div class="container-fluid">
          <a class="navbar-brand custom-navbar" href="#">Be For Reel</a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarNav"
            aria-controls="navbarNav"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="ms-auto list-unstyled">
              <li class="nav-item">
                {{#if logged_in}}
                  <a href="/profile">Profile</a>
                  <a href="/createPolls">Create Polls</a>
                  <a href="/viewPolls">Polls</a>
                  <a href="/">Logout</a>

                  |
                  <button class="no-button" id="logout">logout</button>
                {{else}}
                  <a href="/login">Login</a>

                {{/if}}

              </li>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    {{{body}}}

    <footer class="text-center">
      <p>&copy; {{currentYear}} Be For Reel App. All rights reserved.</p>
    </footer>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    ></script>
  </body>
</html>