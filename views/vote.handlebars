<div class="container pt-3 pb-3">
  <div class="row pb-5 mt-3 mb-3">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
      <h2>TITLE OF POLL</h2>
      <p class="lead text-light">Description of the poll goes here.</p>
    </div>
  </div>
  <div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
      <h6 class="mt-3 mb-2 text-light">Click or tap to make a selection:</h6>
      <ul class="list-group">
        {{#each options}}
        <li class="list-group-item option" data-option="{{this.optionId}}">
          <h4 class="mb-1 text-center">{{this.title}}</h4>
          <div>
            <div class="actors text-center">
              <p>{{this.optionStars}}</p>
            </div>
            <a href="{{this.imdbURL}}" class="text-dark text-center">IMDB</a>
          </div>
          <div>
            <button
              class="btn btn-link"
              data-toggle="collapse"
              data-target="#option{{this.id}}Collapse"
              aria-expanded="true"
              aria-controls="option{{this.id}}Collapse"
            >More details</button>
          </div>
          <div class="collapse" id="option{{this.optionId}}Collapse">
            <p>{{this.optionSummary}}</p>
            <a class="custom-link text-left" href="{{this.trailerURL}}">Trailer</a>
            <a class="custom-link" href="{{this.wikipediaURL}}">Wikipedia</a>
          </div>
        </li>
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
      <h6 class="mt-3 mb-2 text-light">Leave a comment:</h6>
      <textarea
        id="comment"
        class="form-control"
        rows="4"
        placeholder="Type your comment here..."
      ></textarea>
    </div>
  </div>
  <div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
      <div class="text-right">

        <button
          type="button"
          id="submit"
          name="submit"
          class="custom-btn my-1"
          disabled
        > Submit</button>

      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
      <h6 class="mt-3 mb-2 text-light">Previous Comments:</h6>
      <ul class="list-group">
        <li class="list-group-item">{{this.comment}}</li>
      </ul>
    </div>
  </div>
</div>


